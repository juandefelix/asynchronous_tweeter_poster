<div class='container' data-text='<%= @text %>'>
  <h1>New twitter</h1>
  <div id='loader'>
    <p> Please wait ... </p>
  </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<script>
  $(document).ready(function(){
    $.ajax({

      type: 'post',

      url: '/post_tweet',

      data: ({text: $(".container").data("text")}),

      success: function(e){
        console.log("SUUUUCCCCEEEEESSSSSS")
        $("#loader p").hide();
        $('#loader').append('<h1>Success<h1>');
      },

      error: function(e){
        console.log("BIG ERROR");
        console.log(e);
      }
    })

  });
</script>
